{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}